@model Vanessa.Models.Publicacion
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Crear</title>
    <link rel="stylesheet" href="~/Css/styleMuroP14.css" />
    <link rel="stylesheet" href="~/Css/tipografias.css" />
    <style>
        .tipo {
            width: 30%;
            height: 10%;
            border: 3px solid #4074b5;
            background-color: #4075b533;
            position: absolute;
            bottom: 17%; /* Ajuste según tu preferencia para que quede en la misma posición que los otros campos */
            font-family: "Betterflies";
            text-align: center;
            align-items: center;
            left: 13%; /* Alineación similar a los otros campos */
        }

        .tipo > p {
            font-size: calc(1vw + 1vh);
            color: #000;
         }

         .tipo > select {
            width: 80%;
            height: 40%;
            font-size: calc(.8vw + .8vh);
            font-family: Verdana, Geneva, Tahoma, sans-serif;
            background-color: transparent; /* Fondo transparente para que se vea el color de fondo del contenedor */
            color: #FFFF; /* Color de texto más oscuro para las opciones */
            border-color: #4074b5; /* Al enfocar, se agregará un borde con el color de la paleta */
            box-shadow: 0 0 5px rgba(64, 116, 181, 0.7); /* Sombra al hacer foco */
            text-align: center;
          }

          .tipo > select option {
            background-color: #fff;
            color: #333;
            padding: 5px;
           }
    </style>
</head>
<body>
    <header>
        <div></div>
        <div onmouseover="casitas()" onmouseout="casitas2()" id="casita1" class="casita1">
            <p>VOLVER</p>
            <a href="@Url.Action("Index","Home")" id="link1">x</a>
        </div>
        <div></div>
        <div id="abrA" onclick="abrirGestion()">
            <a href="@Url.Action("Index","Publicacion")"><p>VOLVER</p></a>
        </div>
        <div class="titulo1">MURO</div>
        <div class="titulo2">DE</div>
        <div class="titulo3">PUBLICACIONES</div>
        <div id="volver" class="hide" onclick="cerrarGestion()"></div>
    </header>

    <section class="gestionP" id="gestionP">
        <p id="tituloC" class="tituloPC">Crear Publicación</p>
        <!-- Botones de navegación entre publicaciones -->

        <aside class="asd1"></aside>
        <aside class="asd2"></aside>
        <div class="nube">
            <div class="crear">
                <p>CREAR</p>
                <a href="@Url.Action("Crear","Publicacion")"></a>
            </div>
        </div>

        <section class="gestion" id="gest">
            <section class="crearPublicacion" id="crearPu">
                <!-- Formulario con lógica Razor -->
                <form asp-action="Crear" method="post" enctype="multipart/form-data" class="formCP">
                    <!-- Campo: Nombre de la Publicación -->
                    <input type="text" style="color: #FFF;" name="NombrePublicacion" placeholder="NOMBRE" required>
                    <!-- Campo: Imagen -->
                    <div class="imagen form-group">
                        <label asp-for="ImagenArchivo">IMAGEN:</label>
                        <input asp-for="ImagenArchivo" type="file" class="form-control" />
                        <span asp-validation-for="ImagenArchivo" class="text-danger"></span>
                    </div>

                    <!-- Campo: Fecha -->
                    <div class="fecha form-group">
                        <label asp-for="FechaPublicacion">FECHA:</label>
                        <input asp-for="FechaPublicacion" class="form-control" type="date" required />
                        <span asp-validation-for="FechaPublicacion" class="text-danger"></span>
                    </div>

                    <!-- Campo: Hora -->
                    <div class="hora form-group">
                        <label asp-for="HoraPublicacion">HORA:</label>
                        <input asp-for="HoraPublicacion" class="form-control" type="time" required />
                        <span asp-validation-for="HoraPublicacion" class="text-danger"></span>
                    </div>

                    <!-- Campo: Lugar -->
                    <div class="lugar form-group">
                        <label asp-for="LugarPublicacion">LUGAR:</label>
                        <input asp-for="LugarPublicacion" class="form-control" placeholder="LUGAR" />
                        <span asp-validation-for="LugarPublicacion" class="text-danger"></span>
                    </div>

                    <!-- Campo: Tipo de Publicación -->
                    <div class="tipo">
                        <p>TIPO:</p>
                        <select asp-for="TipoPublicacion" class="form-control">
                            <option value="">Elige una opción</option>
                            <option value="Informe">Informe</option>
                            <option value="Artículo">Artículo</option>
                            <option value="Ensayo">Ensayo</option>
                            <option value="Reporte">Reporte</option>
                            <option value="Ponencia">Ponencia</option>
                            <option value="Tesis">Tesis</option>
                            <option value="Poster">Poster</option>
                        </select>
                    </div>

                    <!-- Campo: Contenido -->
                    <div class="contenido form-group">
                        <label asp-for="ContenidoPublicacion">CONTENIDO:</label>
                        <textarea asp-for="ContenidoPublicacion" class="form-control" cols="30" rows="10" required></textarea>
                        <span asp-validation-for="ContenidoPublicacion" class="text-danger"></span>
                    </div>

                    <!-- Campo: Actividades -->
                    <div class="actividades form-group">
                        <label asp-for="ActividadesPublicacion">Actividades de la Publicación</label>
                        <input asp-for="ActividadesPublicacion" class="form-control" />
                        <span asp-validation-for="ActividadesPublicacion" class="text-danger"></span>
                    </div>

                    <!-- Botones de acción -->
                    <div class="crearbtn form-group">
                        <button type="submit" class="btn btn-success">CREAR</button>
                        <a asp-action="Index" class="btn btn-secondary">CANCELAR</a>
                    </div>
                </form>
            </section>
        </section>

        <div class="nube2"></div>
    </section>
    <script href="~/Js/muroPublicacion5.js"></script>
</body>
</html>
