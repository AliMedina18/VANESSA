@model Vanessa.Models.Publicacion

@{
    ViewData["Title"] = "Eliminar Publicación";
}

<h1>@ViewData["Title"]</h1>

<h3>¿Estás seguro de que deseas eliminar esta publicación?</h3>

<div>
    <strong>Nombre:</strong> @Model.NombrePublicacion
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id_Publicacion" />
    <button type="submit" class="btn btn-danger">Eliminar</button>
    <a href="@Url.Action("Index")" class="btn btn-secondary">Cancelar</a>
</form>
