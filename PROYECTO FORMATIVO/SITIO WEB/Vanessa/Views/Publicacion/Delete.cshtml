@model Vanessa.Models.Publicacion

@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Eliminar Publicación</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</head>
<body>
    <div class="container mt-5">
        <h3>¿Estás seguro de que deseas eliminar esta publicación?</h3>

        <div class="mb-3">
            <strong>Nombre:</strong> @Model.NombrePublicacion
        </div>

        <form asp-action="Delete" method="post">
            <input type="hidden" asp-for="Id_Publicacion" />
            <button type="submit" class="btn btn-danger">Eliminar</button>
            <a href="@Url.Action("Index", "Publicacion")" class="btn btn-secondary">Cancelar</a>
        </form>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>
</html>
