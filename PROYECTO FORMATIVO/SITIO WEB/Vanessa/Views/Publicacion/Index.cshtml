@model IEnumerable<Vanessa.Models.Publicacion>

@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</head>
<body>
    <div class="container">
        <h1 class="my-4">Publicaciones</h1>
        <p>
            <a href="@Url.Action("Create", "Publicacion")" class="btn btn-primary">Crear Nueva Publicación</a>
        </p>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Nombre</th>
                    <th>Tipo</th>
                    <th>Lugar</th>
                    <th>Fecha</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var publicacion in Model)
                {
                    <tr>
                        <td>@publicacion.NombrePublicacion</td>
                        <td>@publicacion.TipoPublicacion</td>
                        <td>@publicacion.LugarPublicacion</td>
                        <td>@publicacion.FechaPublicacion.ToString("dd/MM/yyyy")</td>
                        <td>
                            <a href="@Url.Action("Details", "Publicacion", new { id = publicacion.Id_Publicacion })" class="btn btn-info">Ver</a>
                            <a href="@Url.Action("Edit", "Publicacion", new { id = publicacion.Id_Publicacion })" class="btn btn-warning">Editar</a>
                            <a href="@Url.Action("Delete", "Publicacion", new { id = publicacion.Id_Publicacion })" class="btn btn-danger">Eliminar</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>
</html>
