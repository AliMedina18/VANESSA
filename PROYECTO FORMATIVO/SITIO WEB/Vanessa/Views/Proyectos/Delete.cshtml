 @model Vanessa.Models.Proyecto
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Delete</title>
</head>
<body>

    <h1>Eliminar Proyecto</h1>

    <p>¿Estás seguro de que deseas eliminar el siguiente proyecto?</p>

    <div>
        <p><strong>Nombre:</strong> @Model.Nombre</p>
        <p><strong>Equipos de Investigación:</strong> @Model.EquiposInvestigacion</p>
        <p><strong>Fecha de Inicio:</strong> @Model.FechaInicio.ToShortDateString()</p>
        <p>
            <strong>Documento:</strong>
            @if (!string.IsNullOrEmpty(Model.DocumentoProyecto))
            {
                <a asp-action="Download" asp-route-id="@Model.Id">Descargar PDF</a>
            }
            else
            {
                <span>No disponible</span>
            }
        </p>
    </div>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Eliminar</button>
        <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
    </form>
</body>
</html>
