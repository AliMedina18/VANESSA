@model Vanessa.Models.Proyecto
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Details</title>
</head>
<body>

    <h1>Detalles del Proyecto</h1>

    <div>
        <p><strong>Nombre:</strong> @Model.Nombre</p>
        <p><strong>Equipos de Investigación:</strong> @Model.EquiposInvestigacion</p>
        <p><strong>Fecha de Inicio:</strong> @Model.FechaInicio.ToShortDateString()</p>
        <p>
            <strong>Documento:</strong>
            @if (!string.IsNullOrEmpty(Model.DocumentoProyecto))
            {
                <a asp-action="Download" asp-route-id="@Model.Id">Descargar PDF</a>
            }
            else
            {
                <span>No disponible</span>
            }
        </p>
    </div>

    <a asp-action="Index" class="btn btn-secondary">Volver a la lista</a>
</body>
</html>
