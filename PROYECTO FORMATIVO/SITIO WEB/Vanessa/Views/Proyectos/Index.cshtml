 @model IEnumerable<Vanessa.Models.Proyecto>
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>

    <h1>Lista de Proyectos</h1>

    <!-- Botón para crear un nuevo proyecto -->
    <div>
        <a asp-action="Create" class="btn btn-primary">Crear Nuevo Proyecto</a>
    </div>

    <table class="table mt-3">
        <thead>
            <tr>
                <th>Nombre</th>
                <th>Equipos de Investigación</th>
                <th>Fecha de Inicio</th>
                <th>Documento</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Nombre</td>
                    <td>@item.EquiposInvestigacion</td>
                    <td>@item.FechaInicio.ToShortDateString()</td>
                    <td>
                        @if (!string.IsNullOrEmpty(item.DocumentoProyecto))
                        {
                            <a asp-action="Download" asp-route-id="@item.Id">Descargar PDF</a>
                        }
                    </td>
                    <td>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">Detalles</a>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Editar</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Eliminar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</body>
</html>
