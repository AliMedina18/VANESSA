 @model Vanessa.Models.Proyecto
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Edit</title>
</head>
<body>

    <h1>Editar Proyecto</h1>

    <form asp-action="Edit" method="post" enctype="multipart/form-data">
        <div class="form-group">
            <label for="Nombre">Nombre</label>
            <input type="text" class="form-control" id="Nombre" name="Nombre" value="@Model.Nombre" required />
        </div>
        <div class="form-group">
            <label for="EquiposInvestigacion">Equipos de Investigación</label>
            <input type="text" class="form-control" id="EquiposInvestigacion" name="EquiposInvestigacion"
                   value="@Model.EquiposInvestigacion" required />
        </div>
        <div class="form-group">
            <label for="FechaInicio">Fecha de Inicio</label>
            <input type="date" class="form-control" id="FechaInicio" name="FechaInicio"
                   value="@Model.FechaInicio.ToString("yyyy-MM-dd")" required />
        </div>
        <div class="form-group">
            <label for="pdfFile">Actualizar Documento PDF</label>
            <input type="file" class="form-control" id="pdfFile" name="pdfFile" accept="application/pdf" />
            @if (!string.IsNullOrEmpty(Model.DocumentoProyecto))
            {
                <p>Documento actual: <a asp-action="Download" asp-route-id="@Model.Id">Descargar PDF</a></p>
            }
        </div>
        <button type="submit" class="btn btn-primary">Guardar Cambios</button>
        <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
    </form>
</body>
</html>
