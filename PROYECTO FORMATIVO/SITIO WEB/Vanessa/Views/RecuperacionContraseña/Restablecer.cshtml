@model RestablecerContraseñaViewModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    <link rel="stylesheet" href="~/Css/Restablecer.css">
    <title>Cambia tu Contraseña</title>
</head>
<body>
    <div class="Hojas"></div>
    <div class="Ramas"></div>
    <div class="leaf-container">
        <h1>Cambia tu Contraseña</h1>
        <form asp-action="Restablecer" method="post">
            <input type="hidden" asp-for="Token" />

            <div class="form-group">
                <label for="NuevaContraseña">Nueva Contraseña</label>
                <div class="password-container">
                    <input type="password" asp-for="NuevaContraseña" id="NuevaContraseña" name="NuevaContraseña" required
                           onkeyup="verificarFortaleza()" placeholder="Ingresa tu nueva contraseña">
                    <span id="password-icon" class="password-icon" onclick="togglePasswordVisibility('NuevaContraseña')">
                        <i class="fas fa-eye"></i>
                    </span>
                </div>
                <div id="password-strength" class="password-strength"></div>
            </div>

            <div class="form-group">
                <label for="ConfirmarContraseña">Confirmar Contraseña</label>
                <div class="password-container">
                    <input type="password" asp-for="ConfirmarContraseña" id="ConfirmarContraseña" name="ConfirmarContraseña" required
                           onkeyup="validarCoincidencia()" placeholder="Confirma tu nueva contraseña">
                    <span id="confirm-password-icon" class="password-icon" onclick="togglePasswordVisibility('ConfirmarContraseña')">
                        <i class="fas fa-eye"></i>
                    </span>
                </div>
                <div id="password-match-feedback" class="feedback"></div>
            </div>

            <button type="submit" class="btn">Restablecer Contraseña</button>

        </form>
    </div>

    <script src="~/Js/OndaAgua.js"></script>
    <script src="~/Js/verificarFortaleza.js"></script>
</body>
</html>
