@model IEnumerable<Vanessa.Models.Usuario>
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Usuarios Inactivos</title>
    <style>
        /* Estilos globales */
        body {
            font-family: 'Arial', sans-serif;
            background-color: #e0f7fa; /* Fondo aguamarina */
            margin: 0;
            padding: 0;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            flex-direction: column;
            background-image: linear-gradient(to right, #00acc1, #00796b); /* Gradiente de azul a verde */
        }

        h2 {
            color: #00796b; /* Verde oscuro */
            text-align: center;
            margin-bottom: 30px;
            font-size: 32px;
            font-weight: 600;
            text-transform: uppercase;
        }

        /* Tabla */
        table {
            width: 80%;
            margin: 20px 0;
            border-collapse: collapse;
            background-color: #ffffff;
            border-radius: 10px;
            box-shadow: 0 8px 15px rgba(0, 0, 0, 0.1);
        }

        th, td {
            padding: 12px;
            text-align: left;
            font-size: 16px;
            color: #333;
        }

        th {
            background-color: #00796b;
            color: white;
            text-transform: uppercase;
            font-weight: 700;
        }

        tr:nth-child(even) {
            background-color: #f1f8f6;
        }

        tr:hover {
            background-color: #e0f7fa;
            transform: scale(1.02);
            transition: all 0.3s ease;
        }

        /* Estilos para los botones */
        .btn {
            padding: 10px 20px;
            font-size: 16px;
            border-radius: 30px;
            cursor: pointer;
            text-align: center;
            display: inline-block;
            text-decoration: none;
            font-weight: 600;
            margin: 5px;
            width: auto;
            transition: all 0.3s ease;
        }

        .btn-primary {
            background-color: #00acc1;
            color: white;
        }

            .btn-primary:hover {
                background-color: #00796b;
                transform: scale(1.05);
            }

        .btn-success {
            background-color: #388e3c;
            color: white;
        }

            .btn-success:hover {
                background-color: #2c6e2f;
                transform: scale(1.05);
            }

        .btn-danger {
            background-color: #e53935;
            color: white;
        }

            .btn-danger:hover {
                background-color: #c62828;
                transform: scale(1.05);
            }

        .btn-secondary {
            background-color: #00796b;
            color: white;
        }

            .btn-secondary:hover {
                background-color: #004d40;
                transform: scale(1.05);
            }

        /* Enlace de acción */
        .action-links {
            margin-top: 20px;
            text-align: center;
        }

            .action-links a {
                color: #00796b;
                text-decoration: none;
                font-weight: bold;
                font-size: 18px;
                transition: color 0.3s ease;
            }

                .action-links a:hover {
                    color: #00acc1;
                }
    </style>
</head>
<body>
    <h2>Usuarios Inactivos</h2>

    <table class="table">
        <thead>
            <tr>
                <th>Nombre</th>
                <th>Documento</th>
                <th>Correo</th>
                <th>Rol</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var usuario in Model)
            {
                <tr>
                    <td>@usuario.Nombre</td>
                    <td>@usuario.Documento</td>
                    <td>@usuario.Correo</td>
                    <td>@usuario.Rol?.Nombre</td>
                    <td>
                        <a href="@Url.Action("DescargarReporteInactivos", "Usuarios")" class="btn btn-primary">Descargar Reporte</a>
                        <a href="@Url.Action("Reactivar", new { id = usuario.Id })" class="btn btn-success">Reactivar</a>
                        <a href="@Url.Action("EliminarDefinitivamente", new { id = usuario.Id })"
                           class="btn btn-danger"
                           onclick="return confirm('¿Está seguro de que desea eliminar este usuario permanentemente?')">
                            Eliminar Definitivamente
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <div class="action-links">
        <a href="@Url.Action("Index")" class="btn btn-secondary">Ver Usuarios Activos</a>
    </div>

</body>
</html>
