@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
</head>
<body>
    <div class="container mt-5">
        <h2>Usuarios Activos</h2>

        <!-- Botón para crear un nuevo usuario -->
        <a href="@Url.Action("CreateOrEdit")" class="btn btn-success mb-3">Crear Nuevo Usuario</a>

        <!-- Formulario para seleccionar tipo de reporte -->
        <form asp-action="GenerarReporte" method="post" class="mb-3">
            <label for="tipoReporte" class="form-label">Seleccione el formato del reporte:</label>
            <div class="input-group">
                <select id="tipoReporte" name="tipoReporte" class="form-select">
                    <option value="Listado">Listado Simple</option>
                    <option value="Tabla">Tabla</option>
                    <option value="Gráfica">Gráfica</option>
                </select>
                <button type="submit" class="btn btn-primary">Generar Reporte</button>
            </div>
        </form>

        <table class="table table-bordered">
            <thead class="table-dark">
                <tr>
                    <th>Nombre</th>
                    <th>Documento</th>
                    <th>Correo</th>
                    <th>Rol</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var usuario in Model)
                {
                    <tr>
                        <td>@usuario.Nombre</td>
                        <td>@usuario.Documento</td>
                        <td>@usuario.Correo</td>
                        <td>@usuario.Rol.Nombre</td>
                        <td>
                            <a href="@Url.Action("CreateOrEdit", new { id = usuario.Id })" class="btn btn-warning">Editar</a>
                            <a href="@Url.Action("Eliminar", new { id = usuario.Id })" class="btn btn-danger"
                               onclick="return confirm('¿Estás seguro de que deseas eliminar este usuario?');">Eliminar</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

        <!-- Botón para ver usuarios inactivos -->
        <a href="@Url.Action("Inactivos")" class="btn btn-secondary">Ver Usuarios Inactivos</a>
    </div>
</body>
</html>
