@model IEnumerable<Vanessa.Models.Semillero>
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</head>
<body>
    <h1>Semilleros</h1>

    <a href="@Url.Action("Create", "Semillero")" class="btn btn-primary mb-3">Crear Semillero</a>

    <table class="table">
        <thead>
            <tr>
                <th>Nombre</th>
                <th>Imagen</th>
                <th>Área</th>
                <th>Descripción</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var semillero in Model)
            {
                <tr>
                    <td>@semillero.Nombre</td>
                    <td>
                        @if (!string.IsNullOrEmpty(semillero.Imagen))
                        {
                            <img src="~/images/@semillero.Imagen" alt="@semillero.Nombre" width="100" />
                        }
                    </td>
                    <td>@semillero.Area</td>
                    <td>@semillero.Descripcion</td>
                    <td>
                        <a href="@Url.Action("Edit", "Semillero", new { id = semillero.Id })">Editar</a> |
                        <!-- Enlace de eliminación directo -->
                        <form method="post" action="@Url.Action("Delete", "Semillero", new { id = semillero.Id })" style="display:inline;">
                            @Html.AntiForgeryToken()
                            <button type="submit" class="btn btn-danger">Eliminar</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>
</html>
