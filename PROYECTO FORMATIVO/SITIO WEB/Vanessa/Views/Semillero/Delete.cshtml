@model Vanessa.Models.Semillero
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Delete</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</head>
<body>
    <h1>Confirmar Eliminación</h1>

    <p>¿Estás seguro de que deseas eliminar el semillero "<strong>@Model.Nombre</strong>"?</p>

    <p><strong>Área:</strong> @Model.Area</p>
    <p><strong>Descripción:</strong> @Model.Descripcion</p>

    @if (!string.IsNullOrEmpty(Model.Imagen))
    {
        <p><strong>Imagen:</strong></p>
        <img src="~/images/@Model.Imagen" alt="@Model.Nombre" width="200" />
    }

    <!-- Formulario para confirmar la eliminación -->
    <form method="post" action="@Url.Action("DeleteConfirmed", "Semillero", new { id = Model.Id })">
        @Html.AntiForgeryToken()
        <button type="submit" class="btn btn-danger">Eliminar</button>
        <a href="@Url.Action("Index", "Semillero")" class="btn btn-secondary">Cancelar</a>
    </form>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>
</html>
