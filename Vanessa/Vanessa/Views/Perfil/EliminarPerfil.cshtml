@model Vanessa.Models.Usuario
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>EliminarPerfil</title>
</head>
<body>
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger">
            @TempData["Error"]
        </div>
    }

    <p>¿Estás seguro de que deseas eliminar tu perfil? Esta acción no se puede deshacer.</p>

    <form asp-action="EliminarPerfilConfirmed" method="post">
        <button type="submit" class="btn btn-danger">Eliminar</button>
        <a href="@Url.Action("VerPerfil")" class="btn btn-secondary">Cancelar</a>
    </form>

</body>
</html>
