@model List<Vanessa.Models.Semillero>

@{
    Layout = null;
}

<div class="container mt-4">
    <h2 class="text-center mb-4">Consulta de Semilleros y Proyectos</h2>

    @foreach (var semillero in Model)
    {
        <div class="card mb-3 shadow-sm">
            <div class="card-header bg-primary text-white">
                <h4 class="mb-0">@semillero.Nombre</h4>
            </div>
            <div class="card-body">
                <p><strong>Descripción:</strong> @semillero.Descripcion</p>
                <p><strong>Área:</strong> @semillero.Area</p>

                @if (!string.IsNullOrEmpty(semillero.Imagen))
                {
                    <div class="text-center mb-3">
                        <img src="/images/@semillero.Imagen" class="img-fluid" alt="Imagen de @semillero.Nombre" style="max-width: 200px; border-radius: 10px;">
                    </div>
                }

                <h5 class="mt-3">Proyectos Asociados:</h5>
                @if (semillero.Proyectos.Any())
                {
                    <ul class="list-group">
                        @foreach (var proyecto in semillero.Proyectos)
                        {
                            <li class="list-group-item d-flex justify-content-between align-items-center">
                                <span><strong>@proyecto.Nombre</strong> - Inicio: @proyecto.FechaInicio.ToShortDateString()</span>
                            </li>
                        }
                    </ul>
                }
                else
                {
                    <p class="text-muted">No hay proyectos asociados.</p>
                }
            </div>
        </div>
    }
</div>
