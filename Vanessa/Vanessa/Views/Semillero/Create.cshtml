@model Vanessa.Models.Semillero
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/Css/tipografias.css">
    <link rel="stylesheet" href="~/Css/semilleros7.css">
    <title>Formulario de Creación</title>
</head>
<body>
    <!-- Sección del muro y ventana para mantener el diseño -->
    <section class="muro">
        <div class="ventanas vent1"></div>
        <div class="grid">
            <div class="semillero">
                <a href="#">
                    <p>1</p>
                    <div class="img">
                        <img src="Img/semilleros/Pr/gato.png" alt="">
                        <div class="pied"></div>
                    </div>
                    <h3>GATITOS</h3>
                </a>
            </div>
        </div>
    </section>

    <!-- Barra lateral con opciones de gestión -->
    <aside>
        <div class="casita" id="casaVolver"><a href="#"></a></div>
        <div class="gestion" id="conf"><a href="#" onclick="abrirGestion()"></a></div>
        <div class="papel" id="papel"><a href="#"></a></div>
    </aside>

    <!-- Formulario de creación de semillero -->
    <section class="modalSemillero" id="modalC">
        <!-- Enlace para volver a la vista Index -->
        <div class="modalCerrar" id="cerrarC">
            <a href="@Url.Action("Index", "Semillero")">
            </a>
        </div>
        
        <form method="post" enctype="multipart/form-data">
            <!-- Nombre del semillero -->
            <div class="nombreSemillero">
                <input type="text" class="nombreSemilleroC" name="Nombre" placeholder="NOMBRE DEL SEMILLERO (MAYUSCULAS)" required>
            </div>

            <!-- Área del semillero -->
            <div class="areaS">
                <input type="text" name="Area" required placeholder="ÁREA">
            </div>

            <!-- Campo para subir imagen -->
            <div class="img2">
                <p>IMAGEN</p>
                <input type="file" name="imagen" required>
            </div>

            <!-- Descripción del semillero -->
            <div class="descripcionCv">
                <textarea name="Descripcion" id="descC" class="descripcionC" rows="10" placeholder="DESCRIPCIÓN" required></textarea>
            </div>

            <!-- Proyectos relacionados -->
            <div class="nombreProyectos">
                <p>PROYECTOS RELACIONADOS</p>
            </div>
            <div class="proyectos">
                <div class="proy">
                    <p>VER PROYECTOS</p>
                </div>
            </div>

            <!-- Botón para crear el semillero -->
            <button class="crearSemilleroBTN" type="submit" name="crearSemilleroBTN">CREAR SEMILLERO</button>
        </form>
    </section>

    <script src="~/Js/semilleros1.js"></script>
</body>
</html>
